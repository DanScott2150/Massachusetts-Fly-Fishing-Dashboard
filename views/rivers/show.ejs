                <div id='map' style='width: 100%; height: 550px;'></div>
                
                <script>
                    //pass river lat/lng from server-side to client-side
                    //is there a better way to do this?
                    var riverID =   '<%= river._id %>';
                    var mapCenter = [<%=river.lng%>, <%=river.lat%>];

