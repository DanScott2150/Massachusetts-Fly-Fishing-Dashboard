<div class="panel panel-info" id="usgs">
    <style>
    /* TODO: better way than quick fix below */
    .panel img{
        width: 576px;
        height: 100%;
    }
    </style>
    
    <div class="panel-heading">
        <h2 class="panel-title">River Conditions</h3>
    </div>

    <div class="panel-body">
        <div class="container-fluid">
            <% if(usgsData){ %>
            
            <div class="row">

                <div class="col-md-5" style="padding-left:0px; padding-right:0px">

                    <h2 style="margin-top:10px; text-align: center;">
                        Current River Flow<br/>

                        
                        <small><%= usgsData.value.timeSeries[0].sourceInfo.siteName %></small>
                    </h2>
                
                    <div style="padding:10px; border:1px solid #ddd; border-radius:4px;" class="bg-warning">
                        <h3 style="text-align:center; margin:0;">
                            <%= usgsData.value.timeSeries[0].values[0].value[0].value %> cf/s
                            <small>as of <%= new Date(usgsData.value.timeSeries[0].values[0].value[0].dateTime).toLocaleTimeString([], {weekday: 'short', month: 'long', day: 'numeric', hour: '2-digit', minute: '2-digit'}); %></small>
                        </h3>
                        
                        <div class="alert alert-danger" role="alert" style="margin:10px 0px 0px; padding:5px;">
                            <em>[###] higher than average for today</em>
                        </div>
                    </div>
                </div> <!-- col-md-5-->
                
                <div style="float: right; background: #f5f5f5; border:1px solid #ddd; border-radius: 4px; padding:10px 15px;">
                    USGS Data Location: 
                    <div class="dropdown">
                        <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                            <%= usgsData.value.timeSeries[0].sourceInfo.siteName %> (<%=usgsData.value.timeSeries[0].sourceInfo.siteCode[0].value%>)
                            <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                            <li class="disabled"><a href="#">[Other USGS Data Station on Same River]</a></li>
                            <li class="disabled"><a href="#">[Other USGS Data Station on Same River]</a></li>
                            <li class="disabled"><a href="#">[Other USGS Data Station on Same River]</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            
            <hr/>
            
            <div class="row">
                <div class="col" style="text-align: center;">
                    <h2 style="margin-top:10px; text-align: center;">USGS Data Chart<br/></h2>
                    <img src="http://waterdata.usgs.gov/nwisweb/graph?site_no=<%=river.usgsID%>&parm_cd=00060" style="margin:0 auto;"/> 
                </div>
            </div>
            
            <% } else { %>
            
                <div class="row">
                    <div class="col">
                        <h3>USGS River Data not available for this location</h3>
                    </div>
                </div>
                
            <% } %>
        </div> <!-- container -->
    </div> <!-- panel-body -->
    
    <div class="panel-footer text-right">
        <small><em>River Data from USGS.gov</em></small>
    </div>

</div> <!-- panel -->